<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Actividad</title>
        <link  href="https://bootswatch.com/4/lux/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <nav class="navbar navbar-dark bg-dark">
            <a href="/" class="navbar-brand">Actividad</a>
        </nav>
        <div class="container">
            <div class="row mt-7">
                <div class="col-md-9">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Client</th>
                                <th>Requested By</th>
                                <th>Request Date</th>
                                <th>Completion Date</th>
                                <th>Hours</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data) { %>
                                <% for (var i = 0; i < data.length; i++) { %>
                                    <tr>
                                        <td><%= data[i].nombre %></td>
                                        <td><%= data[i].client %></td>
                                        <td><%= data[i].requestedBy %></td>
                                        <td><%= data[i].requestDate %></td>
                                        <td><%= data[i].completionDate %></td>
                                        <td><%= data[i].hourss %></td>
                                        <td>
                                            <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                                            <a href="/update/<%= data[i].id %>" class="btn btn-info">Update</a>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-3">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="client" placeholder="Client" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="requestedBy" placeholder="Requested By" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="date" name="requestDate" placeholder="Request Date" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="date" name="completionDate" placeholder="Completion Date" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="hourss" placeholder="Hours" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Guardar Actividad
                        </button>
                    </form>
                </div>
            </div>    
        </div>
    </body>
</html>